<header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Y   our foot always warm
                        <%= image_tag src="https://cdn-icons-png.flaticon.com/512/2368/2368990.png",width:50, height:50 %>
                    </h1>
                </div>
            </div>
        </header>

<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @products.each do |product| %>
        <div class="col mb-5">
          <div class="card h-100">

            <!-- Product image-->
            <%= image_tag product.image.variant(:thumb), class: 'card-img-top' %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= product.name %></h5>
                <!-- Product price-->
                <%= number_to_currency product.price %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to car</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
