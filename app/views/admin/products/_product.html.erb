<div class = "row">
  <div class = "col-lg-12">
    <div class= "car shadow mb-4">
      <div class= "card-body">
        <div id="<%= dom_id product %>">
            <p>
                <strong>Name:</strong>
                <%= product.name %>
            </p>
            <p>
                <strong>Description:</strong>
                <%= product.description %>
            </p>
            <p>
                <strong>Price:</strong>
                <%= product.price %>
            </p>
            <p>
                <strong>Activate:</strong>
                <%= product.publish %>
            </p>
            <p>
                <strong>Activate:</strong>
                <%= image_tag product.image.variant(:thumb) %>
            </p>

        </div>
      </div>
    </div>
  </div>
</div>
